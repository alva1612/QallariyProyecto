<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QallariyProyecto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/principal.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <header class="header" style="height: 75px; flex: 1; display: flex; flex-direction: row; background-color: #fff; width: 100%; box-shadow: 0 4px 2px -2px #bdbdbd;" >
        <div style="height: 100%; width: 25%; display: flex; justify-content: center; align-items: center">
            <img src="https://codegraph.pe/qallariy/logo.png" style="height: 60px; width: 150px">
        </div>
        <div style="display: flex; width: 50%; height: 100%; margin-bottom: 10px; justify-content: center; align-items: center">
            <div style="display: flex; align-items: center; height: 42px; width: 80%; background-color: white; border: 1px solid black; border-radius: 10px; margin: 0px auto; padding: 0 10px;justify-content:space-between">
                <input type="text" placeholder="Buscar negocios, productos ..." style="width: 90%; text-align: left; outline: none; border-width: 0px">
                <img src="https://codegraph.pe/qallariy/search.png" style="height: 30px; width: 30px" >
            </div>
        </div>
        <div style="height: 100%; width: 25%; display: flex; justify-content: space-around; align-items: center;"> 
            <a style="height: 40px; width: 160px; border-radius: 8px; color: white; background-color: #61E1E6; border-width: 0px; text-decoration:none; display:flex;justify-content:center;align-items:center" asp-controller="Login" asp-action="Logeo">
                Soy
                vendedor
            </a>
            <a style="color: #3483FA; padding: 30px" href="#">Ayuda</a>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()

        </main>
    </div>

    <div style="position: fixed; bottom: 0; left: 0; right: 0; height: 50px; display: flex; flex-direction: row; justify-content: space-between; align-items: center; background-color: white; padding: 0px 20px; box-shadow: 0px 4px 2px 6px #bdbdbd">
        <div style="display:flex;flex:0.5;">
            <a href="#" style="text-decoration: none; font-size:16px;padding:5px;margin-right:30px;color:black">Nosotros</a>
            <a href="#" style="text-decoration: none; font-size:16px;padding:5px;color:black">Contactenos</a>
        </div>
        <div style="display:flex;flex:0.5;justify-content:flex-end">
            <a href="https://www.facebook.com/" target="blank" style="padding:5px;margin-right:30px"><img src="~/img/facebook.png" style="height:30px; width: 30px"></a>
            <a href="https://www.instagram.com/" target="blank" style="padding:5px"><img src="~/img/instagram.png" style="height:30px; width: 30px"></a>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/cards_slider.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

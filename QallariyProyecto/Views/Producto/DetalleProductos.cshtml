	        <br>
	        <div>
				<label for="inputPrice"><strong>PRECIO</strong></label>
				<label for="inputPrice2" class="form-label">@Html.DisplayFor(model => model.precio)</label>
	        </div>
	        <div> 
				<label for="inputStock"><strong>STOCK ACTUAL</strong></label>
				<label for="inputStock2" class="form-label">@Html.DisplayFor(model => model.stock)</label>
	        </div>
	        <div>
				<label for="inputCat"><strong>CATEGORIA</strong></label>
				<label for="inputCat2" class="form-label">@Html.DisplayFor(model => model.descripcion)</label>
	        </div>
	        <div>
				<label for="inputStatus"><strong>ESTADO</strong></label>
				<label for="inputStatus2" class="form-label">@Html.DisplayFor(model => model.estado)</label> 
	        </div>
        </div>        
        </div>
        </div>
        
            
    </form>
    <br>
    <div th:if="${msjError} != null" class="alert alert-danger" role="alert" th:text="${msjError}"></div>
		<div th:if="${msjSuccess} != null" class="alert alert-success" role="alert" th:text="${msjSuccess}"></div>
		<div th:replace="/fragments/footer.html :: footer"></div>

<div>

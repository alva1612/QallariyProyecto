@model QallariyProyecto.Models.Producto

@{
    ViewData["Title"] = "registrarProducto";
}

<h1>registrarProducto</h1>

<form asp-action="registrar" asp-controller="Producto"  class="row g-3" style="border: 8px outset #61E1E6; border-radius: 45px; width: 735px; height: auto; margin: auto; margin-top: 1%; padding: 20px 50px; font-family: century gothic; margin-bottom: 70px; background-color: white">
    <p style="font-weight: bold; text-align: center; color: cadetblue; font-size: x-large;">
        Es
        hora de registrar tu negocio
    </p>
    <div class="datos-negocio d-flex">
        <div class="dcontent">
            <div class="row col-md">
                <div class="container animated bounce col-12 mb-3 justify:center">

                    <div class="imgmer" id="img_container">
                        <img id="preview" style="width: 260px; margin-left: 180px;" src="https://webdevtrick.com/wp-content/uploads/preview-img.jpg" alt="your image" title="">
                    </div>
                    <div class="input-group">
                        <div class="custom-file" style="margin-left: 108px; margin-top: 10px;">
                            <label class="custom-file-label" for="inputGroupFile01">
                                Selecciona
                                un logo
                            </label> <br> <input type="file" id="inputGroupFile01" class="imgInp custom-file-input" aria-describedby="inputGroupFileAddon01" style="width: 378px;">
                        </div>
                    </div>

                </div>
                <div class="col-4 mb-3 mt-4">
                    <label for="inputStock" class="form-label">Stock</label> <input id="inputStock" class="form-control" asp-for="stock">
                </div>

                <div class="col-6 mb-3 mt-4">
                    <label for="inputCategoria" class="form-label">Estado</label>
                    <select id="inputDT" class="form-select" asp-items="@ViewBag.estados" value="id">
                        <option value="0">Seleccione</option>
                    </select>
                </div>
                <div class="col-6 mb-3 mt-4">
                    <label for="inputPhone" class="form-label">Precio</label> <input type="text" class="form-control" name="inputPhone">
                </div>


            </div>
            <div class="form-group mt-4" style="margin-top: 25px;">
                <label for="inputDesc">Descripcion</label>
                <textarea class="form-control" asp-for="descripcion"  rows="3"></textarea>
            </div>

            <button type="submit" class="btn btn-primary" style="height: 38px; width: 255px; border-radius: 8px; color: white; background-color: #61E1E6; border-width: 0px; margin: auto; font-size: 15px; font-family: century gothic; font-weight: bold; margin-top: 27px; margin-left: 178px;">
                Registrar Producto!
            </button>

            <p style="text-align: center; padding-top: 10px; margin-top: 15px; line-height: 1.8rem;">
                Ver productos registrados <strong> aqui </strong>
            </p>
        </div>
    </div>
</form>